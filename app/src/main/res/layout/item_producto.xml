<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:contentDescription="@string/imagen_a_cargar">

    <androidx.cardview.widget.CardView
        android:id="@+id/la_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:background="@drawable/degradado"
        android:paddingBottom="2dp"
        app:cardBackgroundColor="@color/principal_final"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/degradado"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_prod"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/imagen_a_cargar"
                app:srcCompat="@drawable/logo_tienda" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre_prod"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="@dimen/TamaÃ±o_comun"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcion_prod"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_weight="1"
                        android:text="$"
                        android:textAlignment="textEnd"
                        android:textColor="@android:color/background_light"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/precio_prod"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="27dp"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>