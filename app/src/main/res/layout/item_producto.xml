<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="122dp"
    android:contentDescription="@string/imagen_a_cargar">

    <androidx.cardview.widget.CardView
        android:id="@+id/la_tarjeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="2dp"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        app:cardCornerRadius="28dp"
        android:layout_marginTop="4dp"
        app:cardElevation="12dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_prod"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/imagen_a_cargar"
                app:srcCompat="@drawable/logo_tienda" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre_prod"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcion_prod"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="TextView"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/precio_prod"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="TextView"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>