<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="381dp"
        android:layout_height="81dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/text_view_array"
        android:layout_width="381dp"
        android:layout_height="97dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/text"
        tools:layout_editor_absoluteX="11dp" />

    <TextView
        android:id="@+id/nombre_fijo"
        android:layout_width="132dp"
        android:layout_height="39dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="52dp"
        android:text="Nombre desde web"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_array" />

    <TextView
        android:id="@+id/nombre_dinamico"
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/nombre_fijo"
        app:layout_constraintTop_toBottomOf="@+id/text_view_array" />

    <TextView
        android:id="@+id/json_object"
        android:layout_width="357dp"
        android:layout_height="151dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_fijo" />

</androidx.constraintlayout.widget.ConstraintLayout>